<!--
Title: Supply Console UI
Used In File(s): \code\game\machinery/computer/supply.dm
-->

<style type='text/css'>
	#category
	{
		width:125px;
		float:left;
	}
</style>
<div style="float: right; width: 32%; margin-top: 3px;">
	<div class="line">
		{{:helper.link('Permissions', 'key', {'permissions' : 1})}}
	</div>
	{{if !data.moving && !data.at_station}}
		{{:helper.link('Request Truck', 'circle-triangle-e', data.send, null)}}
	{{else !data.moving && data.at_station}}
		{{:helper.link('Send Truck', 'circle-triangle-w', data.send, null)}}
	{{else data.moving}}
		<div class="line">Truck is en route.</div>
	{{/if}}
</div>
<div class="item" style="width:67%; margin-bottom: 3px;">
	<div class="itemLabel">
		Command Funds:
	</div>
	<div class="itemContent">
		{{:data.money}}
	</div>
</div>
{{if data.show_permissions}}
	<div class="item">
		<div class="itemLabel">
			Order Approval:
		</div>
		<div class="itemContent">
			{{:helper.link('Any', '', {'access_restriction' : 0}, data.restriction ? null : 'selected')}}{{:helper.link('Allowed', '', {'access_restriction' : 1}, data.restriction==1 ? 'selected' : null)}}{{:helper.link('ID Only', '', {'access_restriction' : 2}, data.restriction==2 ? 'selected' : null)}}
		</div>
	</div>
{{else}}
	<div style="float: left; width: 32%;">
		<div class="itemLabel" style="margin-bottom: 3px;margin-top: 12px">
			Categories
		</div>
		{{for data.all_supply_groups}}
		<div class="line">
			{{if data.last_viewed_group==value.category}}
				{{:helper.link(value.category, null, {'last_viewed_group': value.category}, 'linkOn', 'noOverflow', 'category')}}
			{{else}}
				{{:helper.link(value.category, null, {'last_viewed_group': value.category}, null, 'noOverflow', 'category')}}
			{{/if}}
		</div>
		{{/for}}
	</div>
	<div style="float: right; width: 66%;">
		<div class="itemLabel">
			Supply Crates
		</div>
		<div class="itemContentWide" style="width: 95%;">
			<div class="statusDisplay">
				<div class="line" style="overflow-y: auto; overflow-x: hidden; scrollbar-base-color: #336699; scrollbar-arrow-color: #ffffff; height: 184px">
					{{for data.supply_packs}}
						<div class="line">
							<div class="statusValue">
								{{:helper.link(value.name, null, value.command1, null, 'fixedLeftWidest noOverflow')}}
								{{:helper.link('#', null, value.command2, null)}}${{:value.cost}}
							</div>
						</div>
					{{empty}}
						<div class="line">
							No entries available for this category.
						</div>
					{{/for}}
				</div>
			</div>
		</div>
	</div>
{{/if}}
<div class="item">
	<div class="itemLabel">Screen:</div>
	<div class="itemContents">
		{{:helper.link('Main',      'gear',{'screen':1},(data.screen==1)?'linkOn':'')}}
		{{:helper.link('Command Requests',     'gear',{'screen':2},(data.screen==2)?'linkOn':'')}}
	</div>
</div>
{{if data.screen == 1}}
	<div class="item">
		<div class="itemLabel">
			Supply Orders
		</div>
		<div class="itemContentWide">
			<div class="statusDisplay">
				<div class="line" style="overflow-y: auto; overflow-x: hidden; scrollbar-base-color: #336699; scrollbar-arrow-color: #ffffff; height: 220px;">
					<u><b>Requests</b></u>
					<br>
					{{for data.requests}}
						<div class="line">
							{{:value.supply_type}} for {{:value.orderedby}}
							<div class="line" style="font-style: italic;">
								REASON: {{:value.comment}}
							</div>
							{{:helper.link('APPROVE', null, value.command2, null)}} {{:helper.link('REJECT', null, value.command1, null)}}
						</div>
					{{empty}}
						No active requests.
					{{/for}}
					<br><br>
					<u><b>Orders</b></u>
					<br>
					{{for data.orders}}
						<div class="line">
							{{:value.supply_type}} for {{:value.orderedby}}
							{{if value.authorized_name != ""}}
								<br/>APPROVED BY: {{:value.authorized_name}}
							{{/if}}
							<div class="line" style="font-style: italic;">
								REASON: {{:value.comment}}
							</div>
						</div>
					{{empty}}
						No confirmed orders.
					{{/for}}
				</div>
			</div>
		</div>
	</div>
{{else data.screen == 2}}
	<div class="item">
		<div class="itemLabel">
			Command Requests
		</div>
		<div class="itemContentWide">
			<div class="statusDisplay">
				<div class="line" style="overflow-y: auto; overflow-x: hidden; scrollbar-base-color: #336699; scrollbar-arrow-color: #ffffff; height: 220px;">
					<u><b>Requests</b></u>
					<br>
					{{for data.command_orders}}
						<div class="line">
							#{{:value.id}} - {{:value.name}}<br>
							Requested:<br>
								{{:value.requested}}<br>
							Fulfilled:<br>
							 	{{:value.fulfilled}}<br>
							worth: {{:value.worth}}<br>
						</div>
					{{empty}}
						No active requests.
					{{/for}}
					<br><br>
				</div>
			</div>
		</div>
	</div>
{{/if}}
